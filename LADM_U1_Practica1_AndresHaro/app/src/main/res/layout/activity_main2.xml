<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    tools:context=".Main2Activity">

    <ImageView
        android:layout_width="220dp"
        android:layout_height="146dp"
        android:src="@drawable/spock"
        android:translationX="90sp"></ImageView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25sp"
        android:gravity="center"
        android:text="El fondo esta bien loco, ¿si o no? Pues claro que si, como no"
        android:textColor="#8DFFFFFF"
        android:textSize="58sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Y ahora una foto de Keanu Reeves nomás porque está chido --->"
            android:textColor="#8CFFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="236dp"
            android:layout_height="match_parent"
            android:src="@drawable/keanu"></ImageView>
    </LinearLayout>

</LinearLayout>